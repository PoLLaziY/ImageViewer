<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/opened_image_card_corner_radius"
    app:cardElevation="@dimen/opened_image_elevation"
    android:layout_marginStart="@dimen/opened_image_margin"
    android:layout_marginEnd="@dimen/opened_image_margin"
    android:layout_marginBottom="@dimen/opened_image_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/opened_image_button_margin"
            android:layout_marginBottom="@dimen/opened_image_button_margin">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_chevron_left_24"
                    app:cardCornerRadius="30dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/likeButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button_background"
                    android:src="@drawable/ic_baseline_local_fire_department_24"
                    android:stateListAnimator="@animator/button_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    app:cardCornerRadius="30dp" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/opened_image_button_margin">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/laterButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:alpha="0.5"
                    android:background="@drawable/round_button_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_watch_later_24"
                    android:stateListAnimator="@animator/button_selector"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/loadButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:alpha="0.5"
                    android:background="@drawable/round_button_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_download_24"
                    android:stateListAnimator="@animator/button_selector"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:alpha="0.5"
                    android:background="@drawable/round_button_background"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:stateListAnimator="@animator/button_selector"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="@dimen/opened_image_interact_button_dimen"
                    android:layout_height="@dimen/opened_image_interact_button_dimen"
                    android:alpha="0.5"
                    android:background="@drawable/round_button_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_share_24"
                    android:stateListAnimator="@animator/button_selector"
                    android:layout_gravity="center" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>